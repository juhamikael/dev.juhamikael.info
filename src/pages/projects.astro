---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import Image from "../components/ts/Projects";
import createSlug from "../lib/createSlug";
import { Icon } from "astro-icon";
import CustomIcon from "../components/astro/CustomIcon.astro";

const allProjects = await getCollection("projects");

const recentProjects = [...allProjects].sort(
  (a, b) =>
    (new Date(b.data.date) as unknown as number) -
    (new Date(a.data.date) as unknown as number)
);

async function getStaticPaths() {
  const about = await getCollection("projects");
  return about.map((text) => ({
    props: text,
  }));
}
const staticPath = await getStaticPaths();
const { data, render } = staticPath[0].props;
const { Content } = await render();
---

<Layout>
  <div class="flex justify-center text-white">
    <div class="mx-4 lg:w-1/2">
      {
        recentProjects.map((project) => (
          <>
            <>
              <div
                class="mt-4 rounded-xl border border-white/10 p-5"
                id={project.data.id}
              >
                <section>
                  <div class="my-2 w-fit">
                    <div
                      class={`${
                        project.data.image ? "mx-4 grid lg:grid-cols-2" : "mx-4"
                      }`}
                    >
                      <div>
                        <h1 class="text-xl font-bold">{project.data.title}</h1>
                        <div class="text-sm">
                          {project.data.tags.join(", ")}
                        </div>
                        <div class="prose mt-6 text-sm text-white">
                          <Content />
                        </div>
                      </div>

                      {project.data.image && (
                        <img
                          alt={project.data.title}
                          src={project.data.image}
                          class="mt-4 rounded-md border border-white/5 p-2 lg:ml-4"
                        />
                      )}
                    </div>
                  </div>
                </section>

                <div class="ml-4 flex place-items-center space-x-6">
                  <CustomIcon
                    linkExists={project.data.github}
                    href={project.data.github}
                    iconName="logo-github"
                    text="Github"
                    iconPack="ion"
                  />
                  <CustomIcon
                    linkExists={project.data.liveDemo}
                    href={project.data.liveDemo}
                    iconName="projector-screen-chart-light"
                    text="Live Demo"
                    iconPack="ph"
                  />
                  <CustomIcon
                    linkExists={project.data.download}
                    href={project.data.download}
                    iconName="baseline-download"
                    text="Download"
                    iconPack="ic"
                  />

                  {project.data.blog && (
                    <a
                      href={`/blogs/${createSlug(project.data.title)}`}
                      rel="noreferrer"
                      class="flex flex-row place-items-center text-sm font-bold text-yellow-400 hover:text-green-400"
                    >
                      <Icon pack="mdi" name="blog-outline" class="mr-1 w-6" />
                      Blog Post
                    </a>
                  )}
                </div>
              </div>
            </>
          </>
        ))
      }
    </div>
  </div>
</Layout>
